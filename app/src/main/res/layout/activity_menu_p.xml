<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/ic_libros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuP">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="MENÃš REGISTRO DE ASISTENCIAS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/materiaButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MATERIA"
        android:backgroundTint="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/estudiantesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ESTUDIANTES"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@id/materiaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/asistenciasButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ASISTENCIAS"
        android:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintTop_toBottomOf="@id/estudiantesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>